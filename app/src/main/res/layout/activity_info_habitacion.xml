<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    >
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleImgHabitacionhuesped"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/item_image_room"
        tools:itemCount="1"
        app:layout_constraintTop_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/textDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/recycleImgHabitacionhuesped"
        app:layout_constraintVertical_bias="0.7"
        android:layout_margin="10dp"
        android:maxLines="9"
        android:textColor="@color/gray_70"
        android:ellipsize="end"
        android:text="@string/large_text_example"
        />
    <LinearLayout
        android:id="@+id/cardDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/textDescripcion"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/textPiso"
                android:layout_width="103dp"
                android:layout_height="match_parent"
                android:background="@color/golden"
                android:gravity="center"
                android:text="Piso 4"
                android:textColor="@color/gray_70"
                android:textSize="15sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/textPrecio"
                android:layout_width="103dp"
                android:layout_height="match_parent"
                android:background="@color/golden"
                android:gravity="center"
                android:textColor="@color/gray_70"
                android:text="S/. 320.00"
                android:textSize="15sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/textDpto"
                android:layout_width="103dp"
                android:layout_height="match_parent"
                android:background="@color/golden"
                android:gravity="center"
                android:text="NÂ° 401"
                android:textColor="@color/gray_70"
                android:textSize="15sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:id="@+id/textContenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="CONTENIDO"
        app:layout_constraintTop_toBottomOf="@+id/cardDetalle"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_contain_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/item_contain_room"
        app:layout_constraintTop_toBottomOf="@id/textContenido"
        tools:itemCount="1"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="56dp"
            android:layout_height="54dp"
            android:layout_margin="15dp"
            android:text="@string/x"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:backgroundTint="@color/gray_30"
            />

        <Button
            android:id="@+id/btnIrReservar"
            android:layout_width="188dp"
            android:layout_height="54dp"
            android:layout_margin="15dp"
            android:text="IR A RESERVAR"
            android:textColor="@color/white"
            android:backgroundTint="@color/gray_100"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>