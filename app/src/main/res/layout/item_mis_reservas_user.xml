<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:backgroundTint="@color/gray_100"
    app:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp">

        <TextView
            android:id="@+id/title_fecha_reserva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de Reserva: "
            android:textColor="@color/gray_10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/FechaReserva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="2024/06/06"
            android:textColor="@color/gray_30"
            app:layout_constraintLeft_toRightOf="@id/title_fecha_reserva"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/title_n_habitacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NÂº Habitacion: "
            android:layout_marginTop="20dp"
            android:textColor="@color/gray_10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_fecha_reserva" />

        <TextView
            android:id="@+id/N_habitacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="304"
            android:layout_marginTop="20dp"
            android:textColor="@color/gray_30"
            app:layout_constraintLeft_toRightOf="@id/title_n_habitacion"
            app:layout_constraintTop_toBottomOf="@id/FechaReserva" />


        <TextView
            android:id="@+id/title_dias_hospedado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dias hospedado: "
            android:layout_marginTop="20dp"
            android:textColor="@color/gray_10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_n_habitacion" />

        <TextView
            android:id="@+id/diasHospedado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="7"
            android:layout_marginTop="20dp"
            android:textColor="@color/gray_30"
            app:layout_constraintLeft_toRightOf="@id/title_dias_hospedado"
            app:layout_constraintTop_toBottomOf="@id/N_habitacion" />

        <TextView
            android:id="@+id/title_monto_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monto total: "
            android:layout_marginTop="20dp"
            android:textColor="@color/gray_10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_dias_hospedado" />

        <TextView
            android:id="@+id/montoTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="S/700.34"
            android:layout_marginTop="20dp"
            android:textColor="@color/gray_30"
            app:layout_constraintLeft_toRightOf="@id/title_monto_total"
            app:layout_constraintTop_toBottomOf="@id/diasHospedado" />




    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>